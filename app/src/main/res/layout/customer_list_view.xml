<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp15"
    app:cardCornerRadius="5dp"
    android:id="@+id/cv_product">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_box_corner_for_mainmenu">
            <ImageView
                android:id="@+id/iv_customer"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/avatar" />
            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/dp10"
                android:scaleType="fitCenter"
                android:src="@drawable/iv_edit"
                android:id="@+id/iv_edit"/>
            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp10"
                android:scaleType="fitCenter"
                android:layout_marginStart="@dimen/dp10"
                android:src="@drawable/delete__1_"
                android:layout_below="@+id/iv_edit"
                android:id="@+id/iv_delete"/>
            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_below="@+id/iv_customer"
                android:fontFamily="@font/montserrat_regular"
                android:singleLine="true"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/dp10"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_number"
                android:singleLine="true"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:layout_below="@+id/tv_customer_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_email"
                android:maxLines="3"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:layout_below="@+id/tv_number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_password"
                android:maxLines="3"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:layout_below="@+id/tv_email"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_password"
                android:layout_marginBottom="@dimen/dp5">

                <View
                    android:layout_width="5dp"
                    android:id="@+id/view_line"
                    android:layout_centerInParent="true"
                    android:layout_height="@dimen/dp30"/>

                <RelativeLayout
                    android:layout_toStartOf="@+id/view_line"
                    android:id="@+id/rl_order_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_box_profile"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:minHeight="35dp"
                        android:text="Profile"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_toEndOf="@+id/view_line"
                    android:id="@+id/rl_place_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp10">


                    <TextView
                        android:id="@+id/tv_multi_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/round_box_profile"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:minWidth="@dimen/dp100"
                        android:minHeight="35dp"
                        android:text="@string/place_order"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
