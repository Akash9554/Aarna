<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        style="@style/CardView.Light"
        android:background="@color/semitransparent"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_box_corner">


            <ImageView
                android:id="@+id/ivAlert"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp20"
                android:src="@drawable/app_logo"
                app:tint="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivAlert"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Bill Paied By Customer"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/rl_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMsg"
                android:layout_margin="@dimen/dp20"
                android:background="@drawable/round_box_corner">
                <EditText
                    android:id="@+id/et_amount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                  android:layout_centerVertical="true"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:backgroundTint="@color/transparent"
                    android:background="@color/transparent"
                    android:hint="Enter amount Paid By Customer"/>
            </RelativeLayout>



                <RelativeLayout
                    android:layout_below="@+id/rl_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp20"
                    android:layout_marginEnd="@dimen/dp20">


                    <TextView
                        android:id="@+id/tv_single_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp25"
                        android:layout_marginBottom="@dimen/dp20"
                        android:background="@drawable/round_corner_color"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:minWidth="@dimen/dp100"
                        android:minHeight="35dp"
                        android:text="Done"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>