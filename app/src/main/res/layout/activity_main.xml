<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activity.HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp250"
        android:id="@+id/rl_top"
        android:background="@drawable/iv_home_screen_img">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="0.9"
            android:src="@drawable/main_screen_back"/>

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp20"
            android:src="@drawable/app_logo"/>
    </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60dp"
            android:layout_below="@+id/rl_top">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_line_one"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:id="@+id/cv_customer_list"
                    android:layout_width="@dimen/dp220"
                    android:layout_height="@dimen/dp150"
                    android:layout_margin="@dimen/dp15"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:background="@drawable/round_box_corner_for_mainmenu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_customer_list"
                            android:layout_width="@dimen/dp80"
                            android:layout_height="@dimen/dp80"
                            android:padding="@dimen/dp5"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp20"
                            android:src="@drawable/iv_customer_list" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/customer_list"
                            android:layout_centerHorizontal="true"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/dp10"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_below="@+id/iv_customer_list"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:id="@+id/cv_delivery_boy_list"
                    android:layout_margin="@dimen/dp15"
                    android:layout_width="@dimen/dp220"
                    android:layout_height="@dimen/dp150"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:background="@drawable/round_box_corner_for_mainmenu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="@dimen/dp80"
                            android:layout_height="@dimen/dp80"
                            android:padding="@dimen/dp5"
                            android:src="@drawable/iv_members_list"
                            android:id="@+id/iv_delever_boy"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp20"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_man_list"
                            android:layout_centerHorizontal="true"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/dp10"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_below="@+id/iv_delever_boy"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_line_two"
                android:layout_below="@+id/ll_line_one"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="@dimen/dp220"
                    android:layout_height="@dimen/dp150"
                    android:layout_margin="@dimen/dp15"
                    app:cardCornerRadius="5dp"
                    android:id="@+id/cv_product">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_box_corner_for_mainmenu">

                        <ImageView
                            android:padding="@dimen/dp5"
                            android:layout_width="@dimen/dp80"
                            android:layout_height="@dimen/dp80"
                            android:src="@drawable/iv_all_product"
                            android:id="@+id/iv_product"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp20"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/product_list"
                            android:layout_centerHorizontal="true"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/dp10"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_below="@+id/iv_product"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:id="@+id/cv_bill"
                    android:layout_width="@dimen/dp220"
                    android:layout_height="@dimen/dp150"
                    android:layout_margin="@dimen/dp15"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:background="@drawable/round_box_corner_for_mainmenu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="@dimen/dp80"
                            android:layout_height="@dimen/dp80"
                            android:src="@drawable/iv_bill"
                            android:id="@+id/iv_bill"
                            android:padding="@dimen/dp5"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp20"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/record_list"
                            android:layout_centerHorizontal="true"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/dp10"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_below="@+id/iv_bill"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_margin="@dimen/dp15"
                    android:layout_width="@dimen/dp220"
                    android:layout_height="@dimen/dp150"
                    app:cardCornerRadius="5dp"
                    android:id="@+id/cv_order_list">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_box_corner_for_mainmenu">

                        <ImageView
                            android:id="@+id/iv_order_list"
                            android:layout_width="@dimen/dp80"
                            android:layout_height="@dimen/dp80"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp20"
                            android:padding="@dimen/dp5"
                            android:src="@drawable/iv_order_list" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_list"
                            android:layout_centerHorizontal="true"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/dp10"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_below="@+id/iv_order_list"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_line_three"
                android:layout_below="@+id/ll_line_two"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:id="@+id/cv_profile"
                    android:layout_width="@dimen/dp220"
                    android:layout_height="@dimen/dp150"
                    android:layout_margin="@dimen/dp15"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:background="@drawable/round_box_corner_for_mainmenu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="@dimen/dp80"
                            android:layout_height="@dimen/dp80"
                            android:padding="@dimen/dp5"
                            android:src="@drawable/iv_profile"
                            android:id="@+id/iv_profile"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp20"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile"
                            android:layout_centerHorizontal="true"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/dp10"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_below="@+id/iv_profile"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:id="@+id/cv_add_new_product"
                    android:layout_margin="@dimen/dp15"
                    android:layout_width="@dimen/dp220"
                    android:layout_height="@dimen/dp150"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:background="@drawable/round_box_corner_for_mainmenu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="@dimen/dp80"
                            android:layout_height="@dimen/dp80"
                            android:padding="@dimen/dp5"
                            android:src="@drawable/iv_add_product"
                            android:id="@+id/iv_add_product"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp20"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add New Product"
                            android:layout_centerHorizontal="true"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/dp10"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_below="@+id/iv_add_product"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>







        </RelativeLayout>


    </RelativeLayout>

</ScrollView>